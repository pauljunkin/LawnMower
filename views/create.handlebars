<h1>Appointment Information For: {{date}} At: {{time}}</h1>
<article>
    <form method="POST" action="/create/{{date}}?time={{time}}">
        <div class="input-field">
            <label>First Name:</label>
            <input type="text" name="firstName" size="50" placeholder="John...">
        </div>
         <div class="input-field">
            <label>Last Name:</label>
            <input type="text" name="lastName" size="50" placeholder="Snow...">
        </div>
        <div class="input-field">
            <label>Address:</label>
            <input type="text" name="address" size="50" placeholder="4 Privet Drive...">
        </div>
        <div class="input-field">
            <label>City:</label>
            <input type="text" name="city" size="50" placeholder="Timonium...">
        </div>
        <div class="input-field">
            <label>Zip Code:</label>
            <input type="text" name="zipCode" size="50" placeholder="12345...">
        </div>
        <div class="input-field">
            <label>Special Requests:</label>
            <textarea type="text" name="specialRequests" rows="20" placeholder="I want perfect lines..."></textarea>
        </div>
        <button type="submit">Finalize Appointment </button>
    </form>
</article>
